<?xml version="1.0" encoding="UTF-8"?>
<scr:components xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0">
	<scr:component name="ch.ethz.opencast.oaipmh.Cq5Repository"
	               immediate="true"
	               activate="activate">
	  <implementation class="ch.ethz.opencast.oaipmh.Cq5Repository" />
	  <service>
	    <provide interface="org.opencastproject.oaipmh.server.OaiPmhRepository" />
            <provide interface="org.osgi.service.cm.ManagedService" />
	  </service>
	  <property name="service.description" value="ETHz CQ5 OAI-PMH repository" />
	  <property name="service.pid" value="ch.ethz.opencast.oaipmh.Cq5Repository" />
	  <reference name="persistence"
	             interface="org.opencastproject.oaipmh.persistence.OaiPmhDatabase"
	             cardinality="1..1"
	             policy="static"
	             bind="setPersistence" />
	</scr:component>
